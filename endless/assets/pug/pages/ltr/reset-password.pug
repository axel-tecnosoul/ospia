doctype html
html(lang='en')
    include ../../components/header-files
    body
        include ../../components/loader
        // page-wrapper Start
        .page-wrapper
          .container-fluid
            // Reset Password page start
            .authentication-main
              .row
                .col-md-12.p-0
                  .auth-innerright
                    .authentication-box
                      .text-center
                        img(src='../assets/images/endless-logo.png', alt='')
                      .card.mt-4.p-4
                        form.theme-form
                          h5.f-16.mb-3.f-w-600 CREATE YOUR PASSWORD
                          .form-group
                            label.col-form-label New Password
                            input.form-control(type='password', placeholder='*****')
                          .form-group
                            label.col-form-label Retype Password
                            input.form-control(type='password', placeholder='*****')
                          .form-group.form-row.mb-0
                            .col-md-2
                              button.btn.btn-primary(type='submit') Done
            // Reset Password page end
        // page-wrapper Ends
        include ../../components/footer-files
